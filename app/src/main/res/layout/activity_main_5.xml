<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="1"
                android:textSize="40sp"
                android:gravity="center"
                android:background="#FF5722"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="2"
                android:textSize="40sp"
                android:background="#816C67"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:text="3"
                android:textSize="40sp"
                android:gravity="center"
                android:background="#FFEB3B"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="4"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:background="#4CAF50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="40sp"
                        android:background="#C0EBF1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:text="6"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textSize="40sp"
                        android:background="#00BCD4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="7"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:background="#E9FBAAF3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:text="8"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:background="#00BCD4"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:text="9"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:background="#9F746A"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="10"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:background="#ff30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="11"
                    android:textSize="40sp"
                    android:textColor="#FBFAFA"
                    android:gravity="center"
                    android:background="#1B0600"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:text="12"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:background="#F8F4F3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>